@{
    ViewData["Title"] = "Edit";
}

@model Happening
<h2>Edit @Model.Name</h2>
<div class="row">
    <form class="col-sm-6" asp-action="EditEvent" asp-controller="Home" asp-rout-eventId="@Model.HappeningId" method="post">
        <div class="form-group row">
            <span class="col-sm-12 text-danger" asp-validation-for="Name"></span>
            <label asp-for="Name" class="col-sm-4">Name: </label>
            <input type="text" asp-for="Name" class="col-sm-8">
        </div>
        <div class="form-group row">
            <span class="col-sm-12 text-danger" asp-validation-for="Date"></span>
            <label asp-for="Date" class="col-sm-4">Date: </label>
            <input type="date" asp-for="Date" class="col-sm-8">
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-10">
                <span class="col-sm-12 text-danger" asp-validation-for="City"></span>
                <label asp-for="City" class="col-sm-4">Location: </label>
                <input type="text" asp-for="City" class="col-sm-8">
            </div>
            <div class="form-group col-sm-2">
                <span asp-validation-for="State" class="text-danger col-sm-4"></span>
                <select asp-for="State">
                    <option value="WA" selected>WA</option>
                    <option value="CA">CA</option>
                    <option value="CO">CO</option>
                    <option value="NY">NY</option>
                    <option value="ID">ID</option>
                    <option value="AR">AR</option>
                    <option value="DC">DC</option>
                    <option value="KS">KS</option>
                    <option value="MA">MA</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Add Event" class="col-sm-4 btn btn-primary">
        </div>
    </form>
</div>
