@{
    ViewData["Title"] = "Register";
}

@model User
<div class="container">
    <div class="row">
        <h2>Register Page!</h2>
        <a href="/loginpage"> Log in Page!</a>
    </div>
    <div class="row">
        <form asp-action="register" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="FirstName" class="text-danger col-sm-12"></span>
                <label asp-for="FirstName" class="col-sm-4"></label>
                <input type="text" asp-for="FirstName" class="col-sm-8" placeholder="First Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="LastName" class="text-danger col-sm-12"></span>
                <label asp-for="LastName" class="col-sm-4"></label>
                <input type="text" asp-for="LastName" class="col-sm-8" placeholder="Last Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="Email" class="text-danger col-sm-12"></span>
                <label asp-for="Email" class="col-sm-4"></label>
                <input type="email" asp-for="Email" class="col-sm-8" placeholder="ex: email@email.com">
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="text-danger col-sm-12"></span>
                <label asp-for="Password" class="col-sm-4"></label>
                <input type="password" asp-for="Password" class="col-sm-8">
            </div>
            <div class="form-group">
                <span asp-validation-for="Confirm" class="text-danger col-sm-12"></span>
                <label asp-for="Confirm" class="col-sm-4"></label>
                <input type="password" asp-for="Confirm" class="col-sm-8">
            </div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
    </div>
</div>